<body>
    <div class="container">
        <h1>תוכנית פעילות בגן</h1>
        <form id="activityForm">
            <label for="activityName">שם הפעילות:</label>
            <input type="text" id="activityName" required>

            <label for="activityDuration">משך הפעילות (בדקות):</label>
            <input type="number" id="activityDuration" required>

            <label for="ageGroup">גילאי הילדים (למשל, 3-4):</label>
            <input type="text" id="ageGroup" required>

            <button type="submit">הוסף פעילות</button>
        </form>

        <h2>לוח זמנים</h2>
        <div id="schedule">
            <!-- פעילויות יתווספו כאן -->
        </div>
    </div>

    <script>
        document.getElementById('activityForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const activityName = document.getElementById('activityName').value;
            const activityDuration = document.getElementById('activityDuration').value;
            const ageGroup = document.getElementById('ageGroup').value;

            if (activityName && activityDuration && ageGroup) {
                const scheduleContainer = document.getElementById('schedule');

                const activityItem = document.createElement('div');
                activityItem.classList.add('activity-item');

                activityItem.innerHTML = `
                    <h3>${activityName}</h3>
                    <p><strong>משך:</strong> ${activityDuration} דקות</p>
                    <p><strong>גילאי ילדים:</strong> ${ageGroup}</p>
                `;

                scheduleContainer.appendChild(activityItem);

                // לנקות את השדות לאחר ההגשה
                document.getElementById('activityName').value = '';
                document.getElementById('activityDuration').value = '';
                document.getElementById('ageGroup').value = '';
            }
        });
    </script>
</body>
</html>
